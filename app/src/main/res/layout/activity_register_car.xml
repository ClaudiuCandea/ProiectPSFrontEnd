<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterCarActivity">

    <EditText
        android:id="@+id/producerText"
        android:layout_width="305dp"
        android:layout_height="59dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:hint="Producer"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationText" />

    <EditText
        android:id="@+id/modelText"
        android:layout_width="305dp"
        android:layout_height="59dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="303dp"
        android:ems="10"
        android:hint="Model"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/producerText" />

    <TextView
        android:id="@+id/carRegisterTitle"
        android:layout_width="134dp"
        android:layout_height="39dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="125dp"
        android:text="Register Car"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/registrationText"
        android:layout_width="305dp"
        android:layout_height="59dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:hint="RegistrationNUmber"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carRegisterTitle" />

    <Button
        android:id="@+id/registerCarButton"
        android:layout_width="167dp"
        android:layout_height="64dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="134dp"
        android:onClick="registerCarMethod"
        android:text="Register Car"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modelText" />
</androidx.constraintlayout.widget.ConstraintLayout>