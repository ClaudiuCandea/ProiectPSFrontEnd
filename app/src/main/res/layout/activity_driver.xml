<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverActivity">

    <Button
        android:id="@+id/LogOutButtonDriver"
        android:layout_width="124dp"
        android:layout_height="74dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="144dp"
        android:onClick="logOutMethod"
        android:text="LogOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeleteAccoundButton" />

    <Button
        android:id="@+id/updateDriverButton"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="5dp"
        android:onClick="toggleUpdate"
        android:text="Update Info"
        app:layout_constraintEnd_toStartOf="@+id/DeleteAccoundButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DeleteAccoundButton"
        android:layout_width="148dp"
        android:layout_height="59dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:onClick="deleteAccountMethod"
        android:text="DeleteAccount"
        app:layout_constraintStart_toEndOf="@+id/updateDriverButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button10"
        android:layout_width="129dp"
        android:layout_height="59dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="640dp"
        android:onClick="replaceFragment"
        android:text="Orders"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DeleteAccoundButton"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="418dp"
        android:layout_height="536dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>